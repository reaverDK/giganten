<Window x:Class="giganten.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
	<ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto">
	<Grid Background="#FFECECEC">
		<DockPanel>
			<Menu DockPanel.Dock="Top" IsMainMenu="True">
				<MenuItem Header="_File">
					<MenuItem Header="_Open" Click="MenuItem_Click_Open"/>
					<MenuItem Header="_Close"/>
					<MenuItem Header="_Save"/>
					<MenuItem Header="_Print"/>
					<MenuItem Header="_Exit" Click="MenuItem_Click_Exit"/>
				</MenuItem>
				<MenuItem Header="_Edit"/>
				<MenuItem Header="_Help">
					<MenuItem Header="_Contact Info"/>
					<MenuItem Header="_About Us"/>
				</MenuItem>
			</Menu>
			<TabControl Width="Auto" Background="#FFECECEC">
				<TabItem Header="Main" >
					<Grid Background="#FFECECEC">
						<Label Content="Sælgerkode:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,36,0,0"/>
						<Label Content="Lønnummer:" HorizontalAlignment="Left" Margin="0,62,0,0" VerticalAlignment="Top"/>
						<Label Content="Sælger:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="201"/>
						<TextBox HorizontalAlignment="Left" Height="23" Margin="91,38,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
						<TextBox HorizontalAlignment="Left" Height="23" Margin="91,64,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
					</Grid>
				</TabItem>
				<TabItem Header="Other">
					<Grid Background="#FFECECEC">
					</Grid>
				</TabItem>
			</TabControl>
		</DockPanel>
	</Grid>
	</ScrollViewer>
</Window>
